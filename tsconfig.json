{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "removeComments": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "bin/git-pull-run.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
}
